<%= select_tag :period, options_for_select(periods, params[:period]), id: 'selectPeriod', class: 'selectsFields' %>
<%= select_tag :order, options_for_select(order_options, params[:order]), id: 'selectOrder', class: 'selectsFields' %>
<%= hidden_field_tag :from, params[:from], id: 'fieldDateFrom'  %>
<%= hidden_field_tag :to, params[:to], id: 'fieldDateTo' %>

<div id="dialog-date">
  <%= text_field_tag :from, params[:from], placeholder: l(:label_from), id: 'date-from'  %>
  <%= text_field_tag :to, params[:to], placeholder: l(:label_to), id: 'date-to'  %>
</div>
